<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootHyper"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#FFFFFF"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:padding="6dp"
            android:src="@drawable/baseline_arrow_back_24"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="#222"
            android:contentDescription="Back" />

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Hyperopia Prevention"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />

    </androidx.appcompat.widget.Toolbar>

    <!-- main dot (keep as-is) -->
    <View
        android:id="@+id/dot"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/circle_dot"
        android:layout_centerVertical="true" />

    <!-- small orbiting dots -->
    <View
        android:id="@+id/dotSmall1"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:background="@drawable/circle_dot_small"
        android:layout_centerVertical="true" />

    <View
        android:id="@+id/dotSmall2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/circle_dot_tiny"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/timerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30"
        android:textSize="28sp"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="120dp"/>

</RelativeLayout>
