<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#FFFFFF"
        android:elevation="4dp">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:padding="6dp"
            android:src="@drawable/baseline_arrow_back_24"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="#222"
            android:contentDescription="Back" />

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Landolt"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />
    </androidx.appcompat.widget.Toolbar>

    <!-- Center C -->
    <com.eyecare.LandoltView
        android:id="@+id/landoltC"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true" />

    <!-- Top -->
    <View
        android:id="@+id/btnTop"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_above="@id/landoltC"
        android:layout_centerHorizontal="true"
        android:background="#007777" />

    <!-- Bottom -->
    <View
        android:id="@+id/btnBottom"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/landoltC"
        android:layout_centerHorizontal="true"
        android:background="#007777" />

    <!-- Left -->
    <View
        android:id="@+id/btnLeft"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_toStartOf="@id/landoltC"
        android:layout_centerVertical="true"
        android:background="#007777" />

    <!-- Right -->
    <View
        android:id="@+id/btnRight"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_toEndOf="@id/landoltC"
        android:layout_centerVertical="true"
        android:background="#007777" />

    <!-- Top-Left -->
    <View
        android:id="@+id/btnTopLeft"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_above="@id/landoltC"
        android:layout_toStartOf="@id/landoltC"
        android:background="#007777" />

    <!-- Top-Right -->
    <View
        android:id="@+id/btnTopRight"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_above="@id/landoltC"
        android:layout_toEndOf="@id/landoltC"
        android:background="#007777" />

    <!-- Bottom-Left -->
    <View
        android:id="@+id/btnBottomLeft"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/landoltC"
        android:layout_toStartOf="@id/landoltC"
        android:background="#007777" />

    <!-- Bottom-Right -->
    <View
        android:id="@+id/btnBottomRight"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/landoltC"
        android:layout_toEndOf="@id/landoltC"
        android:background="#007777" />
</RelativeLayout>
