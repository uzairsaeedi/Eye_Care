<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:padding="6dp"
            android:src="@drawable/baseline_arrow_back_24"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="#222"
            android:contentDescription="Back" />

        <TextView
            android:id="@+id/tvQuestionCount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Q. 1/6"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#0B3B3B" />

        <View
            android:layout_width="36dp"
            android:layout_height="36dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvInstruction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Select the correct sequence of letters"
        android:textSize="16sp"
        android:textColor="#444"
        android:lineSpacingExtra="2dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:gravity="center"
        android:padding="24dp"
        android:background="@drawable/bg_card">

        <ImageView
            android:id="@+id/ivPlate"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:layout_marginTop="18dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:visibility="gone"
            android:contentDescription="plate" />

        <TextView
            android:id="@+id/tvLetters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OFFED"
            android:textStyle="bold"
            android:textColor="#0B3B3B"
            android:letterSpacing="0.2"
            android:textSize="40sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="32dp"
        android:gravity="center">

        <Button
            android:id="@+id/btnOption1"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/bg_option"
            android:text="OFFED"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:elevation="2dp" />

        <Button
            android:id="@+id/btnOption2"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="12dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/bg_option"
            android:text="OFDEE"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:elevation="2dp" />


        <Button
            android:id="@+id/btnOption3"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="12dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/bg_option"
            android:text="OFDEE"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:elevation="2dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/btnNext"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="12dp"
        android:text="Next"
        android:backgroundTint="#4CAF50"
        android:textColor="#FFF" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginBottom="12dp"
        android:gravity="center"
        android:background="@drawable/bg_banner">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(Ad Banner)"
            android:textSize="13sp"
            android:textColor="#777" />
    </LinearLayout>

</LinearLayout>
