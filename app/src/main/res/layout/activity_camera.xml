<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootCamera"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000">

    <androidx.camera.view.PreviewView
        android:id="@+id/previewView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <View
        android:id="@+id/flashOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:alpha="0"
        android:visibility="gone" />

    <FrameLayout
        android:id="@+id/overlayContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp">

        <ImageView
            android:id="@+id/ivCloseCam"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@mipmap/ic_close_foreground"
            android:contentDescription="Close"
            app:tint="@android:color/white"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/ivSwitchCamera"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@mipmap/ic_flip_camera_foreground"
            android:contentDescription="Switch"
            app:tint="@android:color/white"
            android:background="?attr/selectableItemBackgroundBorderless" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottomControls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="bottom"
        android:padding="18dp">

        <ImageView
            android:id="@+id/ivPreviewThumb"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:scaleType="centerCrop"
            android:layout_marginEnd="12dp"
            android:background="@drawable/rounded_gray" />

        <ImageView
            android:id="@+id/btnShutter"
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:src="@drawable/shutter_button"
            android:contentDescription="Shutter" />

        <ImageView
            android:id="@+id/btnSave"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@mipmap/ic_save_foreground"
            android:layout_marginStart="12dp"
            android:visibility="gone"
            app:tint="@android:color/white" />

        <ImageView
            android:id="@+id/btnUndo"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@mipmap/ic_undo_foreground"
            android:layout_marginStart="12dp"
            android:visibility="gone"
            app:tint="@android:color/white" />

        <ImageView
            android:id="@+id/ivAllStickers"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_grid_foreground"
            android:layout_marginStart="12dp"
            android:contentDescription="All stickers"
            android:visibility="gone"
            app:tint="@android:color/white" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvStickers"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="120dp"
        android:padding="8dp"
        android:visibility="gone" />

</FrameLayout>
